{
    "version": "0.2",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "src/app.py",
                "FLASK_ENV": "development",
                "FLASK_RUN_PORT": "4000"
            },
            "args": [
                "run",
                "--no-debugger"
            ],
            "jinja": true,
            "autoReload": {
                "enable": true
            }
        }
    ]
}